<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/popup_list"
    tools:context=".PopItemActivity">

    <Button
        android:id="@+id/popItemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"

        android:layout_marginBottom="125dp"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="@font/amaranth"
        android:text="Ajouter un item"
        android:textColor="@color/blanc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/descriptionET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/amaranth"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:text="Description"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/quantityET"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/quantityET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="49dp"
        android:fontFamily="@font/amaranth"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:singleLine="true"
        android:text="QuantitÃ©"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/popItemButton"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>