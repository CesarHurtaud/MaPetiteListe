<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/popup_list"
    tools:context=".PopItemActivity">

    <Button
        android:id="@+id/popItemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="120dp"

        android:layout_marginBottom="100dp"
        android:text="Ajouter un item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/descriptionET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="50dp"
        android:text="Description"
        app:layout_constraintBottom_toTopOf="@+id/quantityET"
        app:layout_constraintEnd_toEndOf="parent"
        android:singleLine="true"
        android:imeOptions="actionDone"/>

    <EditText
        android:id="@+id/quantityET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="50dp"
        android:text="QuantitÃ©"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/popItemButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:singleLine="true"
        android:imeOptions="actionDone"/>

</android.support.constraint.ConstraintLayout>